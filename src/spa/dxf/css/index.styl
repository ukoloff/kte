body > div
  box-sizing: border-box
  position: absolute
  width: 50%
  top: 0
  bottom: 0
  padding: 1ex

  &:first-child
    left: 0
    border-right: 1px solid black

  &:last-child
    right: 0

.tabs
  border-bottom: 1px solid black
  white-space: nowrap

  & > label
    display: inline-block
    position: relative
    top: 1px
    b-radius = 1ex
    border-radius: b-radius b-radius 0 0
    border: 1px solid black
    padding: 1ex

    &.active
      padding-top: 1.618ex
      border-bottom: 1px solid white
      font-weight: bold

  & > span
    padding: 1ex

sup.popover
  position: relative

  > div
    display: none
    position: absolute
    right: 0
    top: 0

  &:hover > div
    display: block

