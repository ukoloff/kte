svg
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  box-sizing: border-box
  padding: 0

g.ktes > path
  stroke-width: 1px
  vector-effect: non-scaling-stroke
  fill-rule: evenodd
  stroke-linecap: round
  stroke-linejoin: round

  &.kte
    stroke-width: 5px
    fill: none
    stroke: black

    &:hover
      stroke-dasharray: 1%
      animation: dash 1s linear infinite

  &.axis
    stroke: red
    stroke-dasharray: 3% 1% 0.3% 1%

@keyframes dash
  from
    stroke-dashoffset: 0%
  to
    stroke-dashoffset: -2%
